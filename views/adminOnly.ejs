<!-- Admin Dashboard page -->

<%- include('partials/header.ejs') %>
<%- include('partials/navbar2.ejs') %>

<div class="container my-5">

  <h2 class="mb-4">Admin Dashboard</h2>
 <p>        
        Welcome, <br> <strong><%= adminName %></strong> (<%= adminEmail %>)
    </p>

  <!-- Admin Dashboard Summary Cards -->
  <div class="row g-4 mb-5">
    <div class="col-md-4">
      <div class="card shadow-sm border-left-primary h-100">
        <div class="card-body text-center">
          <h5 class="card-title text-primary">Children</h5>
          <h2><%= enrolledChildrenCount %></h2>
          <p class="text-muted">Currently enrolled</p>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card shadow-sm border-left-success h-100">
        <div class="card-body text-center">
          <h5 class="card-title text-success">Parents</h5>
          <h2><%= parentCount %></h2>
          <p class="text-muted">Registered parents</p>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card shadow-sm border-left-info h-100">
        <div class="card-body text-center">
          <h5 class="card-title text-info">Teachers</h5>
          <h2><%= teacherCount %></h2>
          <p class="text-muted">Active educators</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Admin Actions -->
  <br>
  <div class="card shadow-sm mt-5">
    <div class="card-header bg-light">
      <h5 class="mb-0">Admin Actions</h5>
    </div>
    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-2">
          <a href="/admin/user-management" class="btn btn-outline-primary w-100">User Management</a>
        </div>
        <div class="col-md-2">
          <a href="/admin/view-messages" class="btn btn-outline-primary w-100">View Messages</a>
        </div>
        <div class="col-md-2">
          <a href="/admin/educatorLogs" class="btn btn-outline-primary w-100">Educator Logs</a>
        </div>
        <div class="col-md-2">
          <a href="/admin/newEnrollments" class="btn btn-outline-primary w-100">New Enrollments</a>
        </div>
        <div class="col-md-2">
          <a href="/admin/childDetails" class="btn btn-outline-primary w-100">View Register</a>
        </div>
      </div>
    </div>
  </div>

</div>

<%- include('partials/footer') %>
