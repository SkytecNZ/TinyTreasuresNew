<!-- Display all the Logs for Admin -->
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/header.ejs') %>
    <style>
        .table td, .table th {
            text-align: left;
            vertical-align: top;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar2.ejs') %>

    <div class="container mt-5">
        <h2>Educator Logs Register</h2>
         <!-- Export button positioned at top right -->
         <div class="d-flex justify-content-end mb-3">
            <a href="/export-register" class="btn btn-success">Export to CSV</a>
        </div>

        <% if (logs.length > 0) { %>
            <div class="table-responsive" style="max-height: 600px; overflow-y: auto;">
                <table class="table table-bordered mt-4">        
                    <thead class="table-secondary">
                        <tr>
                            <th>Date</th>
                            <th>Educator</th>
                            <th>Child Name</th>
                            <th>In Time</th>
                            <th>Out Time</th>
                            <th>Activities</th>  
                            <th>Enrolled Status</th>                          
                        </tr>
                    </thead>
                    <tbody>
                        <% logs.forEach(log => { %>
                            <tr>
                                <td><%= log.date.toLocaleDateString('en-NZ') %></td>
                                <td><%= log.teacher || 'Unknown' %></td> 
                                <td><%= log.first_name %> <%= log.last_name %></td>                                                 
                                <td><%= log.in_time %></td>
                                <td><%= log.out_time %></td>
                                <td><%= log.activities %></td> 
                                <td><%= log.status %></td>                               
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="text-muted">No attendance logs found.</p>
        <% } %>
        
        <!-- Pagination -->
       <br>
<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">

    <!-- Previous button -->
    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
      <a class="page-link" href="?page=<%= currentPage - 1 %>" tabindex="-1">Previous</a>
    </li>

    <!-- Page numbers -->
    <% for (let i = 1; i <= totalPages; i++) { %>
      <li class="page-item <%= currentPage === i ? 'active' : '' %>">
        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
      </li>
    <% } %>

    <!-- Next button -->
    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
      <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
    </li>
  </ul>
</nav>
    <div class="d-flex justify-content-between align-items-center mt-3">
    <a href="/membersOnly" class="btn btn-secondary">Back to Admin Panel</a>
    <!-- <a href="/export-logs" class="btn btn-success">Export to CSV</a> -->
    </div>

    </div>

    <%- include('partials/footer') %>
</body>

</html>

<!-- This file displays all the logs for educators in the admin dashboard -->
